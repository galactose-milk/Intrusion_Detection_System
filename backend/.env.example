# =============================================================================
# IDS Configuration File
# Copy this to .env and customize your settings
# =============================================================================

# --- Detection Thresholds ---
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
PORT_SCAN_THRESHOLD=10
CONNECTION_RATE_THRESHOLD=50
ML_CONFIDENCE_THRESHOLD=0.7

# --- Suspicious Ports (comma-separated) ---
SUSPICIOUS_PORTS=23,135,139,445,1433,3306,3389,5900,6379,27017

# --- Alert Settings ---
ALERT_RETENTION_COUNT=1000
MAX_ALERTS_DISPLAY=100

# --- Email Notifications (SMTP) ---
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=IDS Alert <your-email@gmail.com>
SMTP_TO=admin@example.com
ALERT_EMAIL_THRESHOLD=HIGH

# --- Database ---
DATABASE_ENABLED=true
DATABASE_PATH=./ids_alerts.db

# --- Authentication ---
AUTH_ENABLED=false
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme123
JWT_SECRET=your-super-secret-key-change-this

# --- Server Settings ---
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=./ids.log

# --- External APIs (optional) ---
VIRUSTOTAL_API_KEY=
ABUSEIPDB_API_KEY=
